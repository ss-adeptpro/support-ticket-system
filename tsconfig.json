{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,    //to disable error "variable is declared but its value is never read"
    "noUnusedParameters": false, //to disable error "variable is declared but its value is never read"
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
//  "include": ["./src/**/*.{ts,tsx}"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
